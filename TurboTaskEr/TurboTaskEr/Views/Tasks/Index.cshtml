@{
    ViewBag.Title = "Lista Task-uri";
}

<h2> @ViewBag.Title</h2>
<br />

@if (TempData.ContainsKey("message"))
{
    <h1>@ViewBag.message</h1>
}

<a class="btn btn-outline-success" href="/Projects/Index"> Inapoi la Proiecte</a>
<br />

@foreach (TurboTaskEr.Models.Task task in ViewBag.Tasks)
{
    @if (task.UserId == ViewBag.UserCurent)
    {
        <div class="card">
            <div class="card-body">

                <h3 class="card-title alert-success py-3 px-3 rounded-2">@task.Title</h3>

                <div class="card-text">@task.Description</div>

                <div class="card-text">@task.Status.StatusName</div>

                <div class="card-text"><i class="bi bi-calendar2-heart-fill"></i> @task.Deadline</div>

                <div class="d-flex justify-content-between flex-row mt-5">

                    <span class="alert-success"><i class="bi bi-calendar2-heart-fill"></i> @task.Date</span>

                </div>

            </div>

            <a class="btn btn-success" href="/Tasks/Show/@task.Id"> Afisare task </a>


        </div>
    }
    

}