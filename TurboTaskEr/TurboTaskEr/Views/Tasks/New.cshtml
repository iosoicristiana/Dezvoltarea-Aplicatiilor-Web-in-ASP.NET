@model TurboTaskEr.Models.Task

<h2 class="text-center mt-5">Adaugare task</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Tasks", method: FormMethod.Post))
            {
                <input type="hidden" name="ProjectId" value=" @ViewBag.ProjectId" />

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Title", "Titlu Task")
                <br />
                @Html.TextBox("Title", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                <br />

                @Html.Label("Description", "Descriere Task")
                <br />
                @Html.TextArea("Description", null, new { @class = "form-control" })

                @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
                <br />

                @Html.Label("Deadline", "Deadline Task")
                <br />
                @Html.TextArea("Deadline", null, new { @class = "form-control" })

                @Html.ValidationMessage("Deadline", null, new { @class = "text-danger" })
                <br />

                <br />

                <label>Selectati statusul</label>
                @Html.DropDownListFor(m => m.StatusId, new SelectList(Model.Stat, "Value", "Text"),
            "Selectati status", new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.StatusId, null, new { @class = "text-danger" })
                <br />

                <br />


                <label>Selectati userul pentru acest task</label>
                @Html.DropDownListFor(m => m.UserId, new SelectList(Model.UserInTeam, "Value", "Text"),
            "Selectati userul", new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.UserId, null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn btn-success" type="submit"><i class="bi bi-plus-circle-fill"></i> Adauga task</button>
            }





        </div>
    </div>
</div>








