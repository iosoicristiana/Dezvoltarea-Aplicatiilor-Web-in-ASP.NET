<div class="row">
    @foreach (var user in ViewBag.UsersList)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">

               
                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <h3 class="card-title">@user.FirstName @user.LastName</h3>

                         @*<p><i class="bi bi-person"> </i> UserName: @user.UserName</p>*@

                        
                        <ul class="list-group list-group-flush">
                           
                            @if (@user.FirstName != null)
                            {
                                <li class="list-group-item"><i class="bi bi-person"> </i> Nume utilizator: @user.FirstName</li>
                            }
                            @if (@user.LastName != null)
                            {
                                <li class="list-group-item"><i class="bi bi-person"> </i> Prenume utilizator: @user.LastName</li>
                            }
                            

                            <li class="list-group-item"><i class="bi bi-envelope"></i> Email utilizator: @user.Email</li>
                        </ul>
                    </div>


                    <div class="d-flex flex-row d-flex justify-content-around">

                        <div> <a class="btn btn-outline-success" href="/Users/Edit/@user.Id"> Editare utilizator</a> </div>

                        <div> <a class="btn btn-outline-success" href="/Users/Show/@user.Id"> Vizualizare utilizator</a> </div>

                    </div>

                </div>

            </div>
        </div>
    }

</div>
